{
  "name": "jedrzejchalubek/wp-docker-starter",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/jedrzejchalubek/wp-docker-starter",
  "authors": [
    {
      "name": "Jędrzej Chałubek",
      "email": "jedrzej.chalubek@gmail.com",
      "homepage": "https://github.com/jedrzejchalubek"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "roots/wordpress": "5.0"
  },
  "config": {
    "vendor-dir": "web/vendor"
  },
  "extra": {
    "wordpress-install-dir": "web/wp",
    "installer-paths": {
      "web/wp/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/wp/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/wp/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
